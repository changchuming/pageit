{
  "manifest_version": 2,
  "name": "One-pagify!",
  "description": "Merges clickbait into one page",
  "version": "1",
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentscript.js"]
    }
  ],
  "background": { 
    "scripts": ["background.js"] 
  },
  "icons" : {
    "16" : "sample-16.png",
    "48" : "sample-48.png",
    "128" : "sample-128.png"
  }
}